<div class="jumbotron">
  <div class="container">
	<h1>Dataset Comparison</h1>
  </div>
</div>

<div class="container">
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th>Dataset</th>
					<th>Field</th>
				</tr>
			</thead>
			<tbody>
				<% @datasets.each do |dataset| %>
					<tr>
						<td><a href="/datasets/<%= dataset["id"] %>"><%= dataset["name"] %></a></td>		
						<% if params["field"] %>					
							<td><%= dataset[ params["field"] ] %></td>
						<% end %>
						<% if params["custom_field"] %>					
							<td><%= dataset["metadata"]["custom_fields"][params["fieldset"]] if dataset["metadata"]["custom_fields"] %></td>
						<% end %>						
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	
</div><!-- /.container -->